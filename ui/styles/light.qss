QWidget {
    background-color: #f7f7f7;
    color: #111;
    font-family: "Segoe UI";
    font-size: 13px;
}

QHeaderView::section {
    background-color: #ffffff;
    font-size: 14px;
    font-weight: 600 bold;
    padding: 8px;
    border-bottom: 1px solid #ddd;
}

QTableView {
    background-color: #fff;
    gridline-color: #eee;
}

QFrame {
    background-color: #ffffff;
    border-radius: 10px;
}